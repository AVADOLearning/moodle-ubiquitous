#!/bin/bash

#
# Ubiquitous Moodle
#
# @author Luke Carrier <luke@carrier.im>
# @copyright 2016 Luke Carrier
#

. "$(dirname $(dirname $(readlink -fn $0)))/libexec/ubiquitous-lib"
require_root
require_domain $@

echo "restoring file ownership..."
chown -R "${user}:${user}" "$htdocs"

echo "restoring permissions..."
find "$htdocs" -type d -exec chmod 0770 {} \;
find "$htdocs" -type f -exec chmod 0660 {} \;

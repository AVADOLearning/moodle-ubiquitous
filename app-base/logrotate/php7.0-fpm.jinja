/var/log/php7.0-fpm/*.log /var/log/php7.0-fpm/*/*.log {
    weekly
    rotate 12
    missingok
    notifempty
    compress
    delaycompress

    sharedscripts
    postrotate
        /usr/lib/php/php7.0-fpm-reopenlogs
{% for acl in salt['pillar.get']('php:fpm:log_acl', []) %}
        setfacl -R -m {{ acl['acl_type'] }}:{{ acl['acl_name'] }}:{{ acl['perms'] }} /var/log/php7.0-fpm
{% endfor %}
    endscript
}

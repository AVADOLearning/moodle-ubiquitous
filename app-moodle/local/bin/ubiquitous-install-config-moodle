#!/bin/bash

#
# Ubiquitous Moodle
#
# @author Luke Carrier <luke@carrier.im>
# @copyright 2018 The Ubiquitous Authors
#

domain=''
destination=''

while true; do
    case "$1" in
        -d|--domain      ) domain="$2"      ; shift 2 ;;
        -t|--destination ) destination="$2" ; shift 2 ;;
        *                ) break            ;         ;;
    esac
done

set -euo pipefail
IFS=$'\n\t'
. "$(dirname $(dirname $(readlink -fn $0)))/lib/ubiquitous-core"

require_root
require_platform "$domain"

if [ ! -d "$destination" ]; then
    abort $ERROR_PARAMS "release directory '${destination}' does not exist"
fi

cp -fp "${platform_home}/config.php" "${destination}/config.php"
